<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="message is-danger">
      <div class="message-header">
        <p>Errors</p>
      </div>
      <div class="message-body">
        The form contains <%= pluralize(@user.errors.count, "error") %>.
      </div>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
