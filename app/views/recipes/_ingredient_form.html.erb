<li class="ingredient">
  <fieldset>
    <legend class="hidden">Ingredient:</legend>
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <div class="field">
            <%= f.label :amount, class: "label hidden" %>
            <div class="control">
              <%= f.number_field :amount, placeholder: "1.0", step: :any, class: "input" %>
            </div>
          </div>
        </div>

        <div class="level-item">
          <div class="field">
            <%= f.label :measurement_id, class: "label hidden" %>
            <div class="control">
              <%= f.collection_select :measurement_id, Measurement.all, :id, :name %>
            </div>
          </div>
        </div>

        <div class="level-item">
          <div class="field">
            <%= f.label :food_id, class: "label hidden" %>
            <div class="control">
              <%= f.collection_select :food_id, Food.all, :id, :name %>
            </div>
          </div>
        </div>

        <div class="level-item">
          <div class="field">
            <div class="control">
              <button class="button" type="button">
                <%= f.remove_nested_fields_link 'Remove' %>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
</li>
