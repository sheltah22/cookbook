<li class="ingredient">
  <fieldset>
    <legend class="hidden">Ingredient:</legend>
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <div class="field">
            <%= f.label :amount, class: "label hidden" %>
            <div class="control">
              <%= f.number_field :amount, placeholder: "1.0", step: :any, class: "input" %>
            </div>
          </div>
        </div>

        <div class="level-item">
          <div class="field">
            <%= f.label :measurement, class: "label hidden" %>
            <div class="control">
              <% if object.measurement_id.to_i != 0 %>
                <%= f.text_field :measurement, class: "input",
                                               value: Measurement.find(object.measurement_id.to_i).name %>
              <% else %>
                <%= f.text_field :measurement, class: "input" %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="level-item">
          <div class="field">
            <%= f.label :food, class: "label hidden" %>
            <div class="control">
              <% if object.food_id.to_i != 0 %>
                <%= f.text_field :food, class: "input",
                                        value: Food.find(object.food_id.to_i).name %>
              <% else %>
                <%= f.text_field :food, class: "input" %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="level-item">
          <div class="field">
            <div class="control">
              <button class="button" type="button">
                <%= f.remove_nested_fields_link 'Remove' %>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
</li>
