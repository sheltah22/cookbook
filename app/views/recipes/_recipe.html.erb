<li id="recipe-<%= recipe.id %>">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image-is-48x48">
            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4"><a href="<%= recipe_path(recipe) %>"><%=recipe.title%></a></p>
          <p class="subtitle is-6"><%=recipe.dish_type.name=%></p> <!-- TODO: sub with actual type -->
        </div>
      </div>

      <div class="content">
        <p>By <%= recipe.user.name %></p>
        <% if recipe.ingredients.all.any? %>
        <div class="column is-narrow">
          <strong>Ingredients:</strong>
          <% recipe.ingredients.each do |ingredient| %>
            <div class="column is-narrow">
              <%= ingredient.as_string %>
            </div>
          <% end %>
        </div>
        <% end %>
        <p><%= recipe.content %></p>
      </div>

      <footer class="card-footer">
        <p class="card-footer-item">
          <span>
            Posted <%= time_ago_in_words(recipe.created_at) %> ago.
          </span>
        </p>
        <p class="card-footer-item">
          <%= link_to "Edit", edit_recipe_path(recipe) %>
        </p>
      </footer>
    </div>
  </div>
</li>
