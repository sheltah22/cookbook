<%= provide(:title, 'Log in') %>

<section class="section">
  <div class="columns is-centered">
    <div class="column is-4">
      <h1 class="title">Log in</h1>
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :email, class: "label" %>
          <div class="control">
            <%= f.email_field :email, class: "input", placeholder: "jdoe@example.com" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %>
          <div class="control">
            <%= f.password_field :password, class: "input", placeholder: "a-strong-password"%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.submit "Log in", class: "button is-blue" %>
          </div>
        </div>
      <% end %>
      <br>
      <p class="is-5">New user? <strong><%= link_to "Sign up", signup_path %></strong></p>
    </div>
  </div>
</section>
