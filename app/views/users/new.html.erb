<%= provide(:title, 'Sign up') %>

<section class="section">
  <div class="columns is-centered">
    <div class="column is-4">
      <h1 class="title">Sign up</h1>
      <%= form_for(@user, url: signup_path) do |f| %>
        <%= render 'shared/error_messages'%>
        <div class="field">
          <%= f.label :name, class: "label" %>
          <div class="control">
            <%= f.text_field :name, class: "input", placeholder: "John Doe" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :email, class: "label" %>
          <div class="control">
            <%= f.email_field :email, class: "input", placeholder: "jdoe@example.com" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %>
          <div class="control">
            <%= f.password_field :password, class: "input", placeholder: "a-strong-password"%>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirmation", class: "label" %>
          <div class="control">
            <%= f.password_field :password_confirmation, class: "input", placeholder: "the-same-password" %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.submit "Sign up", class: "button is-blue" %>
          </div>
        </div>
      <% end %>
      <br>
      <p class="is-5">Already have an account?</p>
      <div class="container">
        <button class="button is-blue">Sign In</button>
      </div>
    </div>
  </div>
</section>
